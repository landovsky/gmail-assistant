# Gmail Assistant v2 - Environment Variables
# Copy to .env and fill in your values

# === LLM Configuration ===
LITELLM_BASE_URL=http://localhost:4000
GMA_LLM_CLASSIFY_MODEL=gemini/gemini-2.0-flash
GMA_LLM_DRAFT_MODEL=gemini/gemini-2.5-pro
GMA_LLM_CONTEXT_MODEL=gemini/gemini-2.0-flash
GMA_LLM_MAX_CLASSIFY_TOKENS=256
GMA_LLM_MAX_DRAFT_TOKENS=2048

# === Gmail OAuth ===
GMA_AUTH_MODE=personal_oauth
GMA_AUTH_CREDENTIALS_FILE=config/credentials.json
GMA_AUTH_TOKEN_FILE=config/token.json
# GMA_AUTH_SERVICE_ACCOUNT_FILE=config/service-account-key.json

# === Server ===
GMA_SERVER_HOST=localhost
GMA_SERVER_PORT=3000
GMA_SERVER_LOG_LEVEL=info
GMA_SERVER_WORKER_CONCURRENCY=3
# GMA_SERVER_ADMIN_USER=admin
# GMA_SERVER_ADMIN_PASSWORD=secret

# === Sync ===
# GMA_SYNC_PUBSUB_TOPIC=projects/my-project/topics/gmail-notifications
GMA_SYNC_FALLBACK_INTERVAL_MINUTES=15
GMA_SYNC_FULL_SYNC_INTERVAL_HOURS=1
GMA_SYNC_HISTORY_MAX_RESULTS=100

# === Redis (Sidekiq) ===
REDIS_URL=redis://localhost:6379/0

# === API Keys (used by LiteLLM, not directly) ===
# ANTHROPIC_API_KEY=sk-ant-xxx
# OPENAI_API_KEY=sk-xxx
# GEMINI_API_KEY=xxx

#!/usr/bin/env bash
# Remove all ðŸ¤– AI/* labels from inbox messages.
#
# Usage:
#   bin/cleanup-labels              # Dry run (list only)
#   bin/cleanup-labels --delete     # Actually remove labels

set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
VENV="$SCRIPT_DIR/../.venv/bin/python"

if [ -x "$VENV" ]; then
  exec "$VENV" "$SCRIPT_DIR/cleanup-labels.py" "$@"
fi

exec python3 "$SCRIPT_DIR/cleanup-labels.py" "$@"

#!/bin/bash
# bin/rework
# Process rework requests (drafts labeled ðŸ¤– AI/Rework).
# Run this after adding feedback on mobile.

set -uo pipefail
source "$(dirname "$0")/common.sh"

log_info "=== rework: started ==="
SCRIPT_START=$(date +%s)

run_step "Rework Drafts" sonnet rework-draft "$GMAIL_READ $GMAIL_WRITE $GMAIL_DRAFT $LOCAL_TOOLS"

SCRIPT_END=$(date +%s)
log_info "=== rework: finished ($(( SCRIPT_END - SCRIPT_START ))s total) ==="

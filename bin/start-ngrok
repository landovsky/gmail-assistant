#!/usr/bin/env bash
# Start ngrok tunnel for local development webhook testing
# Usage: bin/start-ngrok [port]

set -e

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

PORT="${1:-3000}"

echo -e "${BLUE}Starting ngrok tunnel...${NC}"
echo -e "Local port: ${GREEN}${PORT}${NC}"
echo ""

# Check if ngrok is installed
if ! command -v ngrok &> /dev/null; then
  echo -e "${RED}Error: ngrok not found${NC}"
  echo ""
  echo "Install ngrok:"
  echo "  macOS:  brew install ngrok"
  echo "  Linux:  snap install ngrok"
  echo "  Or visit: https://ngrok.com/download"
  exit 1
fi

# Check if ngrok is authenticated
if ! ngrok config check &> /dev/null; then
  echo -e "${YELLOW}Warning: ngrok may not be authenticated${NC}"
  echo ""
  echo "Get your auth token from: https://dashboard.ngrok.com/get-started/your-authtoken"
  echo "Then run: ngrok config add-authtoken YOUR_TOKEN"
  echo ""
fi

echo -e "${YELLOW}Starting ngrok on port ${PORT}...${NC}"
echo -e "${YELLOW}Press Ctrl+C to stop${NC}"
echo ""
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}Once ngrok starts:${NC}"
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""
echo -e "${YELLOW}1. Copy the 'Forwarding' HTTPS URL${NC}"
echo ""
echo -e "${YELLOW}2. Setup Google Cloud Pub/Sub:${NC}"
echo "   bin/setup-gcloud enable --url https://YOUR-NGROK-URL"
echo ""
echo -e "${YELLOW}3. Register Gmail watch:${NC}"
echo "   curl -X POST http://localhost:${PORT}/api/watch"
echo ""
echo -e "${GREEN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# Start ngrok
ngrok http "$PORT" --log=stdout
